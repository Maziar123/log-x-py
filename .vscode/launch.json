{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/logxpy:${workspaceFolder}/logxpy_cli_view:${workspaceFolder}/logxy_log_parser"
      },
      "justMyCode": false
    },
    {
      "name": "Python: Simple Logging Example",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/examples/logxpy/01_simple_logging.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/logxpy"
      }
    },
    {
      "name": "Python: Decorators Example",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/examples/logxpy/02_decorators.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/logxpy"
      }
    },
    {
      "name": "Python: Async Tasks Example",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/examples/logxpy/04_async_tasks.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/logxpy"
      }
    },
    {
      "name": "Python: Run pytest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-v", "${workspaceFolder}/tests"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/logxpy:${workspaceFolder}/logxpy_cli_view:${workspaceFolder}/logxy_log_parser"
      },
      "justMyCode": false
    }
  ]
}
